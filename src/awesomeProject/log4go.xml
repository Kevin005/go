<logging>
    <filter enabled="true">
        <tag>stdout</tag>
        <type>console</type>
        <level>DEBUG</level>
    </filter>
    <filter enabled="true">
        <tag>file</tag>
        <type>file</type>
        <level>INFO</level>
        <property name="filename">test.log</property>
        <property name="rotate">true</property>
        <property name="maxlines">2</property>
        <property name="daily">true</property>
    </filter>
</logging>